generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

enum UserRole {
  ADMIN
  STAFF
}

model User {
  id    String   @id @default(cuid())
  email String   @unique
  name  String?
  role  UserRole @default(STAFF)

  // Credentials auth for MVP
  passwordHash String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id       String  @id @default(cuid())
  code     String  @unique
  name     String
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prices           ProductPrice[]
  dailyEntries     DailyInventoryEntry[]
  dailyRemittances DailyRemittance[]
  dailyExpenses    DailyExpense[]
}

model Product {
  id       String  @id @default(cuid())
  sku      String? @unique
  name     String
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prices       ProductPrice[]
  dailyEntries DailyInventoryEntry[]
}

model ProductPrice {
  id        String @id @default(cuid())
  storeId   String
  productId String

  lp  Decimal @db.Decimal(12, 2)
  srp Decimal @db.Decimal(12, 2)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([storeId, productId])
  @@index([productId])
  @@index([storeId])
}

model DailyInventoryEntry {
  id        String   @id @default(cuid())
  storeId   String
  productId String
  date      DateTime @db.Date

  beginQty    Int @default(0)
  incomingQty Int @default(0)
  salesQty       Int @default(0)
  discountedQty Int @default(0)
  endQty         Int @default(0)

  lpSnapshot  Decimal @default(0.00) @db.Decimal(12, 2)
  srpSnapshot Decimal @default(0.00) @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([storeId, date, productId])
  @@index([storeId, date])
  @@index([productId, date])
}

model DailyRemittance {
  id      String   @id @default(cuid())
  storeId String
  date    DateTime @db.Date

  cash          Decimal @default(0.00) @db.Decimal(12, 2)
  gcash         Decimal @default(0.00) @db.Decimal(12, 2)
  discountedQty Int     @default(0)
  notes         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([storeId, date])
  @@index([storeId, date])
}

model DailyExpense {
  id      String   @id @default(cuid())
  storeId String
  date    DateTime @db.Date

  description String
  amount      Decimal @default(0.00) @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId, date])
}

model ExpenseSuggestion {
  id         String   @id @default(cuid())
  storeId    String
  text       String
  usageCount Int      @default(1)
  lastUsedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([storeId, text])
  @@index([storeId, usageCount, lastUsedAt])
}